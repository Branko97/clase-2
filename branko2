#include <stdio.h>
#include <stdlib.h>

int main()
{
    int numero  ;
    int numeroMax ;
    int numeroMin ;
    int contador = 0 ;
    int acumulador ;

    printf("Ingrese  numero ") ;
    scanf("%d", numero) ;
    numeroMax = numero ;
    numeroMin = numero ;
    acumulador = numero ;

    for(contador = 0 ; contador < 10 ; contador ++)
    {

    printf("Ingrese  numero ") ;
    scanf("%d", numero) ;
    acumulador = acumulador + numero ;

    if(numero > numeroMax)
        {
            numeroMax = numero;
        }

        if(numero < numeroMin)
        {
            numeroMin = numero;
        }
    }

    printf("El maximo es: %i\n",numeroMax);
    printf("El minimo es: %i\n",numeroMin);
    printf("El promedio es: %f\n", ((float)acumulador) / 10);
    return 0;

}
